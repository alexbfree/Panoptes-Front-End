  .discipline
    margin: 0.28em
    color: white
    text-align: center
    width: 5em
    font-size:25px
    height: 4em
    border-radius: 1em
    border: 0
    padding: .5em
    color: #006DFF
    background-color: #FFFFFF
    min-width: 100px

    .icon
      font-size: 50px
      width: 1.5em
      height: 2em
      margin: 0 auto

    p
      margin-top: 0.333em
      margin-bottom: 0px
      font-size: 14px

  .discipline-all:hover
