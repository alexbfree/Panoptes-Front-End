.all-resources-page
  .projects-hero
    background: url(./assets/all-projects-hero.png) center center no-repeat

  .collections-hero
    background: url(./assets/all-projects-hero.png) center center no-repeat

  .resources-container
    background: #ebebeb
    padding: 0 3vw

    .resource-results-counter
      color: rgba(100, 100, 100, 0.5)
      font-weight: 700
      position: relative
      text-align: center

      p
        font-size: 14px
        margin: 0
        padding: 2.33em 0

      p.showing-with-link-para
        padding-top: 20px
        padding-bottom: 20px

      a.view-by-discipline-link
        margin: 15px
        display: inline-block

  .pagination
    padding: 2.33em 0
    text-align: center

    .pill-button
      margin-right: 10px
      padding: 1em

    .active
      border: 2px solid

  .card-search
    max-width: 250px
    position: absolute
    right: 1.75em
    text-align: left
    top: 1.33em
    width: 100%

    @media screen and (max-width: 1024px)
      position: relative
      margin: 0 auto 2.33em

  .card-sort
    max-width: 250px
    position: absolute
    top: 1.33em
    text-align: left
    left: 1.75em
    width: 100%
