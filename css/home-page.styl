orange = #eeaa33
offwhite = #F5F5F5
mobile-width = 600px

.home-page
  background: #f4f4f4

  .hero
    align-items: center
    background: url(./assets/zoohome-hero.jpg) top left no-repeat
    background-size: cover
    color: #f9f9f9
    display: flex
    flex-direction: column
    min-height: 800px
    justify-content: center
    padding: 0 3vw
    text-align: center

    @media screen and (max-width: 400px)
      svg
        margin-top: 15vh

    .hero-title
      color: inherit
      font-weight: 300
      line-height: 40px
      padding: 1.5em 0 0.5em

    .hero-tagline
      color: inherit
      font-size: 1.6em
      line-height: 22px
      margin: 0 auto
      max-width: 600px
      padding: 1em 0 6.5em

    .hero-button
      box-sizing: border-box
      color: #fbfbfb
      font-size: 1.6em
      font-weight: 400
      margin-bottom: 3vh

      &:hover
        background: lighten(COBOLT_BLUE, 20%)

    .user-dashboard
      text-align: left
      
      nav
        display: flex
        flex-wrap: wrap
        justify-content: space-around
        width: 100%
        
        @media screen and (max-width: mobile-width)
          max-width: 400px
          margin: 0 auto
        
        a
          display: flex
          flex: 0 0 48%
          margin: 1em auto
          align-items: stretch
          text-decoration: none
          color: offwhite
          
          @media screen and (max-width: mobile-width)
            flex: 0 0 100%
          
          img
            display: block
          
          span
            line-height: 64px
            overflow: hidden
            position: relative
          
            &:first-child
              position: relative
              overflow: hidden
              width: 64px
              height: 64px
              margin-right: 1em

              .mega-counter
              .mini-counter
                position: absolute
                top: 0
                right: 0
                background: #3cc
                border-radius: 32px
                text-align: center

              .mini-counter
                width: 24px
                height: 24px
                font-size: 16px
                line-height: 24px

              .mega-counter
                width: 64px
                height: 64px
                font-size: 24px
                line-height: 64px
            
  .latest-on-talk
    background: offwhite
    display: flex
    flex-direction: column
    justify-content: center
    padding: 6vh 3vw
    color: orange
    max-width: 1000px
    margin: 0 auto
    
    h3
      padding: 0
      margin: 0
      color: orange
      
    ul
      display: flex
      flex-wrap: wrap
      padding: 0
      margin: 0
      list-style: none
      justify-content: space-between
      
      li
        flex: 0 0 30%
        padding: 0 
        margin: 0
        
        @media screen and (max-width: mobile-width)
          flex-basis: 100%
          margin-bottom: 1em
        
        &:first-child
        &:last-child
          margin: 0
        
        a
          color: orange
          text-decoration: none

        h4
          font-size: 1.2em
          font-weight: bold
          margin: 1em 0
          padding: 0

        time
          display: block
          font-size: 0.8em

        p
          color: orange
          padding: 0
        
        .user
          display: flex
          flex-direction: row
          align-items: center
          
          img
          span
            display: block
            margin-right: 1em
            vertical-align: center
  
  .featured-projects, .recent-projects
    align-items: center
    display: flex
    flex-direction: column
    justify-content: center
    padding: 4.5em 0 8em
    text-align: center

    h5
      font-weight: 300

    .featured-projects-list, .recent-projects-list
      column-width: 22em
      column-gap: 2.5em
      display: flex
      flex-wrap: wrap
      margin: 4.6em 3vw
      max-width: 960px
      width: 100%
      justify-content: center

    .recent-projects-list
      justify-content: center

  .recent-projects
    padding: 2.5em 0

  .about-zooniverse
    align-items: center
    display: flex
    flex-direction: column
    text-align: center

    .about-items-list
      width: 100%

      .about-item
        display: flex
        justify-content: center
        padding: 17.5em 0
        position: relative

        &:nth-child(even)
          background-color: #E8E8E8

        .about-item-wrapper
          display: flex
          flex-wrap: wrap
          justify-content: center
          max-width: 960px
          width: 100%

          .about-image
            width: 250px
            height: 250px

          .about-item-content
            display: inline-flex
            flex-basis: 450px
            flex-direction: column
            justify-content: center
            margin: 2em 0
            padding: 0 5.5vw
            text-align: left

            p
              color: #5a5a5a

