.projects-hero
  background: url(/assets/all-projects-hero.png) center center no-repeat

.collections-hero
  background: url(/assets/all-projects-hero.png) center center no-repeat

.resources-container
  background: #ebebeb
  padding: 0 3vw
  text-align: center

  .resource-results-counter
    color: rgba(100, 100, 100, 0.5)
    font-weight: 700
    position: relative
    text-align: center
    overflow: visible
    padding: 0
    max-width: 1200px
    margin: 0 auto
    .pagination
      padding: 0.5em 0

  p
    font-size: 1em
    margin: 0
    padding: 2.33em 0

  p.showing-projects
    padding-top: 1.1em
    padding-bottom: 1.1em

    @media screen and (max-width: 750px)
      clear: both

  a.view-by-discipline-link
    margin: 15px
    display: inline-block

.pagination
  padding: 2.33em 0
  text-align: center

  @media screen and (max-width: 750px)
    padding: 0 0 1em

  .pill-button
    margin-right: 10px
    padding: 1em

  .project-pill-button
    color: FOREGROUND
    border-color: FOREGROUND

  .active
    border: 2px solid

.card-search
  max-width: 250px
  text-align: left
  width: 100%
  float: right
  margin-right: 35px

  @media screen and (max-width: 750px)
    float: none
    margin: 1em auto 0

.card-sort
  max-width: 250px
  float: left
  text-align: left
  width: 100%
  margin-left: 35px

  @media screen and (max-width: 750px)
    float: none
    margin: 2.33em auto 0

.project-page
  .project-recent-content
    font-size: 15px
    line-height: 1.5
    margin: 0 3vw

    .recent-comments-page-body
      display: flex
      flex-direction: row
      align-content: space-between
      justify-content: space-between

      .left-col
        width: 100%

      .right-col
        max-width: 40%

    .subject-with-comment
      display: inline-block
      background-color: BACKGROUND
      margin: 10px
      padding: 10px
      border-radius: 5px
      width: 150px
      height: 212px

      p.comment
        padding-top: 0.5em
        padding-bottom: 0

        a.no-formatting
          text-decoration: none
          color: FOREGROUND

        .comment-body::before
          content: open-quote

        .comment-body::after
          content: " ..." close-quote
        .comment-body
          height: 3.9em
          overflow: hidden
          display: block
          text-overflow: ellipsis
          line-height: 1.3em
          max-height: 3.9em

        .comment-timestamp
          font-style: italic
          font-size: 11px
          display: block
          margin-top: 10px